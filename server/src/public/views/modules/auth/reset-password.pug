include ../../mixins/input.pug
include ../../partials/head.pug
body
    include ../../partials/index-header.pug
    main
        include ../../partials/messages-section.pug
        h2 Reset password
        form(method="POST", action=`/auth/reset-password?hash=`)
            input(type="hidden", name="_csrf", value=csrf)

            +input("Main user password", {type: "password", placeholder: "********", name: "newPassword"})
            br
            +input("Repeat password", {type: "password", placeholder: "********", name: "repeatNewPassword"})
            br
            button(type="submit") Change password
            p Remember your password? 
                a(href="/auth/login") Login
    script(src="../../../js/reset-password.js")